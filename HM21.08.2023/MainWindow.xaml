<Window x:Class="HM21._08._2023.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HM21._08._2023"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ComboBox DockPanel.Dock="Top" Height="20">
            <ComboBoxItem Name="ShowAllWorkers" Selected="ShowAllWorkers_Selected" Content="Show All Workers"/>
            <ComboBoxItem Name="ShowAllProducts" Selected="ShowAllProducts_Selected" Content="Show All Products"/>
            <ComboBoxItem Name="ShowAllShops" Selected="ShowAllShops_Selected" Content="Show All Shops"/>
        </ComboBox>
        <Grid DockPanel.Dock="Top">
            <DataGrid x:Name="DataGrid"/>
        </Grid>
    </DockPanel>
</Window>
